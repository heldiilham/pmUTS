<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55cccc"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ancl" />

    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taman Impian Jaya Ancol"
        android:gravity="center"
        android:textColor="@color/black"
        />

    <TextView
        android:textSize="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi: Jl. Lodan Timur No.7, RW.10, Ancol, Kota Jakarta Utara, DKI Jakarta." />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ancol merupakan salah satu destinasi wisata yang ramah keluarga. Di sini, Anda dan keluarga bisa menikmati berbagai jenis tempat dan wahana seru, menantang, dan juga edukatif seperti kolam renang, kereta wisata, dan lain-lain.
\nHarga tiket masuk Taman Impian Jaya Ancol pun sangat murah, hanya dibanderol Rp25.000,00 per kepala (belum termasuk tiket lain-lain)." />
    </ScrollView>
</LinearLayout>